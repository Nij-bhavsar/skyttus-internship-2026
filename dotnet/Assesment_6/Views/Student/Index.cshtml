@model List<Assesment_6.Models.Student>

<div class="container mt-4">
    <h2>Student List</h2>
    <a asp-action="Create" class="btn btn-success mb-3">Add Student</a>

    <table class="table table-bordered">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Action</th>
        </tr>

        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Name</td>
                <td>@s.Email</td>
                <td>@s.Age</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@s.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@s.Id"
                       onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
